rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function isResourceOwner() {
      return isAuth() && resource.data.userId == request.auth.uid;
    }

    function isRequestOwner() {
      return isAuth() && request.resource.data.userId == request.auth.uid;
    }
    
		match /users/{userId} {
 		 // Cho phép tìm kiếm user khác
 		allow read: if request.auth != null;

  		// Chỉ cho sửa profile của chính mình
  	allow write: if request.auth != null
    && request.auth.uid == userId;
		}


    // USERS
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // BOOKS (public read)
    match /books/{bookId} {
  allow read: if true;
  allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
  allow update: if isAuth()
    && resource.data.userId == request.auth.uid
    && request.resource.data.userId == request.auth.uid;
  allow delete: if isAuth()
    && resource.data.userId == request.auth.uid;
}


    // USER_BOOKS
    match /user_books/{id} {
      allow read, write: if isResourceOwner() || isRequestOwner();
    }

    match /users/{userId}/books/{bookId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // NOTES
    match /notes/{noteId} {
      allow read, write: if isResourceOwner() || isRequestOwner();
    }

    // FLASHCARDS
    match /flashcards/{flashcardId} {
      allow read, write: if isResourceOwner() || isRequestOwner();
    }

    // FRIENDSHIPS
    match /friendships/{id} {
      allow read, write: if isAuth()
        && (resource.data.userId1 == request.auth.uid
         || resource.data.userId2 == request.auth.uid
         || request.resource.data.userId1 == request.auth.uid
         || request.resource.data.userId2 == request.auth.uid);
    }

    // ACTIVITIES
         match /activities/{id} {
      allow read: if isAuth()
        && (resource.data.visibility == 'public'
         || resource.data.isPublic == true
         || resource.data.userId == request.auth.uid);
      allow create: if isRequestOwner();
      allow delete: if isResourceOwner();

      // Cho phép update chỉ 2 field đếm
      allow update: if isResourceOwner()
        || (isAuth()
            && request.resource.data.diff(resource.data).changedKeys()
              .hasOnly(['likeCount','commentCount']));

      match /likes/{likeId} {
        allow read: if isAuth();
        allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
        allow delete: if isAuth() && resource.data.userId == request.auth.uid;
      }

      match /comments/{commentId} {
        allow read: if isAuth();
        allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAuth() && resource.data.userId == request.auth.uid;
      }
    }
    
    // NOTIFICATIONS (in-app)
    match /notifications/{id} {
      allow read: if isAuth() && resource.data.recipientId == request.auth.uid;
      allow create, update, delete: if false;
    }

  }
}
